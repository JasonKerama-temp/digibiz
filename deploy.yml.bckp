name: Build iOS Cordova App

on:
  push:
    branches:
      - main  # or 'staging', depending on your branch

env:
  APP_NAME: "Digibiz"
  CORDOVA_PLATFORM: "ios"

jobs:
  build_ios:
    runs-on: macos-latest

    steps:
      - name: Checkout repository
        uses: actions/checkout@v3

      - name: Set up Node.js
        uses: actions/setup-node@v3
        with:
          node-version: 20

      - name: Install Cordova CLI
        run: npm install -g cordova@11

      - name: Install project dependencies
        run: npm ci

      - name: Add iOS platform
        run: |
          cordova platform remove ios || true
          cordova platform add ios@6.2.0  # match your existing iOS target

      - name: Prepare certificates
        run: |
          mkdir -p ~/Library/MobileDevice/Provisioning\ Profiles
          echo "${{ secrets.IOS_PROVISIONING_PROFILE }}" > ~/Library/MobileDevice/Provisioning\ Profiles/app.mobileprovision
        shell: bash

      - name: Decrypt certificate
        run: |
          echo "${{ secrets.IOS_CERTIFICATE_P12 }}" | base64 --decode > ios_cert.p12
        shell: bash

      - name: Build iOS app
        run: |
          cordova build ios --release --device --buildConfig build.json
        shell: bash

      - name: Export IPA
        run: |
          mkdir -p output
          xcodebuild -exportArchive \
            -archivePath platforms/ios/build/device/${{ env.APP_NAME }}.xcarchive \
            -exportOptionsPlist exportOptions.plist \
            -exportPath output/
        shell: bash

      - name: Upload IPA artifact
        uses: actions/upload-artifact@v4
        with:
          name: ios-ipa
          path: output/*.ipa
